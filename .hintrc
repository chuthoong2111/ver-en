{
  "extends": [
    "development"
  ],
  "hints": {
    "compat-api/html": [
      "default",
      {
        "ignore": [
          "img[loading]"
        ]
      }
    ],
    "axe/name-role-value": [
      "default",
      {
        "link-name": "off"
      }
    ],
    "no-inline-styles": "off",
    "compat-api/css": [
      "default",
      {
        "ignore": [
          "scroll-behavior",
          "-webkit-overflow-scrolling",
          "overscroll-behavior",
          "-webkit-text-decoration-skip",
          "text-decoration-skip-ink",
          "-webkit-tap-highlight-color",
          "text-decoration-thickness",
          "text-underline-offset",
          "text-underline-offset",
          "text-underline-offset"
        ]
      }
    ]
  }
}